<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
    android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_reminders">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:textStyle="bold"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_red_dark"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="title"
        android:id="@+id/textView_title" />
        <ImageView
            android:src="@android:drawable/divider_horizontal_bright"
            android:background="@android:color/darker_gray"
            android:layout_width="1000dp"
            android:layout_height="1.5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/imageView7"
            android:layout_alignBottom="@+id/textView_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_below="@+id/textView_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/gridLayout">

            <TextView
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Description:"
                android:id="@+id/textView3"
                android:layout_alignBottom="@+id/textView_deadline"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_marginLeft="2dp"
            style="@style/TextStyle"
                android:textSize="14sp"
                android:padding="5dp"
                android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Content"
            android:id="@+id/textView_content"
                android:layout_below="@+id/textView_title"
                android:layout_alignLeft="@+id/textView_deadline"
                android:layout_alignStart="@+id/textView_deadline" />

            <TextView
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Deadline:"
                android:id="@+id/textView5"
                android:layout_alignBottom="@+id/textView_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_marginLeft="2dp"
                android:textSize="14sp"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Content"
                android:id="@+id/textView_deadline"
                android:layout_below="@+id/textView_content"
                android:layout_toRightOf="@+id/textView3"
                android:layout_toEndOf="@+id/textView3" />
        </GridLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>