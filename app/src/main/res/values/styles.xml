<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="TextStyle" parent="android:Theme.Light">
        <item name="android:textAppearance">@style/TextFormat</item>
    </style>
    <style name="TextFormat" parent="android:style/TextAppearance">
        <item name="android:textColor">@color/maintextcolor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/hinttextcolor</item>
    </style>

    <style name="TextStyleHeading" parent="android:Theme.Light">
        <item name="android:textAppearance">@style/TextFormatHeading</item>
    </style>
    <style name="TextFormatHeading" parent="android:style/TextAppearance">
        <item name="android:textColor">@color/maintextcolor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColorHint">@color/hinttextcolor</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:typeface">monospace</item>
    </style>

</resources>
